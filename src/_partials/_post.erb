<div class="post">
  <a href="<%= post.relative_url %>" class="post_link">
    <div>
      <h3><%= post.data.title %> </h3>
      <time class="post__time"> <%= post.data.date.strftime("%b %-d %Y") %> </time>
      <div class="tag-wrapper">
        <% post.data.tags.each do |tag| %>
          <sl-tag variant="primary"> <%= tag.sub("_", " ") %> </sl-tag>
        <% end %>
      </div>
      <p class="post__description"> <%= post.data.description %> </p>
    </div>
  </a>
</div>
